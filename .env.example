ENVIRONMENT=development
SECRET_KEY=dev-secret-key-change-in-production
DEBUG=true
LOG_LEVEL=DEBUG
LOG_FORMAT=console

# Database settings
DATABASE_HOST=localhost
DATABASE_PORT=5432
DATABASE_USER=weather_app
DATABASE_PASSWORD=weather_app
DATABASE_NAME=weather_app_db
DATABASE_ECHO=false

# Redis
REDIS_URL=redis://redis:6379/0
CACHE_TTL=3600

# Open-Meteo API
OPENMETEO_GEOCODING_URL=https://geocoding-api.open-meteo.com/v1
OPENMETEO_ARCHIVE_URL=https://archive-api.open-meteo.com/v1
OPENMETEO_TIMEOUT=30

# Temperature thresholds
DEFAULT_TEMPERATURE_THRESHOLD_HIGH=30.0
DEFAULT_TEMPERATURE_THRESHOLD_LOW=0.0
